<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/schemeGreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="SUDOKU"
            android:typeface="monospace"
            android:textAlignment="center"
            android:textColor="@color/schemeYellow"
            android:background="@color/schemeDarkGreen"
            android:paddingVertical="5dp"
            android:textStyle="bold"
            android:letterSpacing="0.3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/schemeGreen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/schemeLime">
            <Button
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="EASY"
                android:layout_weight="1"
                android:backgroundTint="@color/schemeLime"
                android:textColor="@color/schemeDarkGreen"
                android:id="@+id/btnDiffEasy"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/schemeGreen"/>
            <Button
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="MEDIUM"
                android:layout_weight="1"
                android:backgroundTint="@color/schemeLime"
                android:textColor="@color/schemeDarkGreen"
                android:id="@+id/btnDiffMedium"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/schemeGreen"/>
            <Button
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="HARD"
                android:layout_weight="1"
                android:backgroundTint="@color/schemeLime"
                android:textColor="@color/schemeDarkGreen"
                android:id="@+id/btnDiffHard"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schemeDarkGreen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/schemeDarkGreen">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Playing:"
                android:textSize="25sp"
                android:textColor="@color/schemeLime"
                android:textAlignment="center"
                android:id="@+id/playingText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Selected:"
                android:textSize="25sp"
                android:textColor="@color/schemeLime"
                android:textAlignment="center"
                android:id="@+id/selectedText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Timer:\n WIP"
                android:textSize="25sp"
                android:textColor="@color/schemeLime"
                android:textAlignment="center"
                android:id="@+id/timerText"/>
        </LinearLayout>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:rowCount="9"
        android:columnCount="9"
        android:id="@+id/sudokuGrid"
        >

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/schemeDarkGreen">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schemeDarkGreen"
            />
        <LinearLayout
            android:id="@+id/numberBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="1"
                android:textColor="@color/white"
                android:background="@color/sudokuOne"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="2"
                android:textColor="@color/white"
                android:background="@color/sudokuTwo"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="3"
                android:textColor="@color/white"
                android:background="@color/sudokuThree"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="4"
                android:textColor="@color/white"
                android:background="@color/sudokuFour"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="5"
                android:textColor="@color/white"
                android:background="@color/sudokuFive"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="6"
                android:textColor="@color/white"
                android:background="@color/sudokuSix"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="7"
                android:textColor="@color/white"
                android:background="@color/sudokuSeven"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="8"
                android:textColor="@color/white"
                android:background="@color/sudokuEight"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="9"
                android:textColor="@color/white"
                android:background="@color/sudokuNine"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schemeDarkGreen"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/schemeLime">

            <Button
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="RESTART"
                android:backgroundTint="@color/schemeLime"
                android:textColor="@color/schemeDarkGreen"
                android:id="@+id/btnRestart"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/schemeGreen"/>
            <Button
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="HIGHSCORES"
                android:backgroundTint="@color/schemeLime"
                android:textColor="@color/schemeDarkGreen"
                android:id="@+id/btnHighscores"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>